<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="williamNoActionBar"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>


    <style name="imageLocation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:src">@drawable/ic_room</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>



    <style name="description">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_width">187dp</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--Text description for Tabs-->
    <style name="description.2">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:layout_width">185dp</item>
        <item name="android:layout_height">159dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:autoLink">web|phone</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
    </style>


</resources>

