<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#ffffff"
    card_view:cardElevation="7dp"
    card_view:contentPadding="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minHeight="0dp">

        <ImageView
            android:id="@+id/place"
            android:layout_width="155dp"
            android:layout_height="103dp"
            android:src="@drawable/budgetcaf1"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/name"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/name"
            android:layout_width="194dp"
            android:layout_height="31dp"
            android:gravity="center"
            android:text="@string/cafe_aras"
            android:textColor="@color/textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toEndOf="@+id/place"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description"
            style="@style/description.2"
            android:layout_height="0dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/budget_desc1"
            card_view:layout_constraintBottom_toBottomOf="@+id/place"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.1"
            card_view:layout_constraintStart_toEndOf="@+id/place"
            card_view:layout_constraintTop_toTopOf="@+id/place" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>